<h1><center><u>Edit User Profile</u></h1></center>

<%= @user.errors.full_messages.join(", ") %>
<%= form_for @user do |f| %>

<div class="form-group" id="profile_picture">
   <label for="exampleInputFile">Upload profile picture</label>
   <%= f.file_field :picture %>
   <p class="help-block">Ideally your profile picture should be square.</p>
 </div>

  <div class="form-group">
    <label >Tagline</label>
    <%= f.text_field :tagline, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Summary</label>
    <%= f.text_area :summary, class: "form-control", rows: "4" %>
  </div>

  <div class="form-group">
      <label>LinkedIn profile link</label>
      <%= f.text_field :link, class: "form-control"%>
    </div>
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>

  <% end %>

