<script>

   function show_hide_coordinates() {
     if ($("#include_map :selected").text() == "Yes") {
       $("#latitude").show();
       $("#longitude").show();
     }
     else {
       $("#latitude").hide();
       $("#longitude").hide();
     }
   }

  show_hide_coordinates();

