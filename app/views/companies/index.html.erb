<h1><center><u>Companies</u></center></h1>

<br>

<div class="row">
<% @companies.each do |comp| %>
<div id="listing">
    <div class="col-sm-6 col-md-6">
      <!-- <div id="info"> -->
      <div class="thumbnail">
        <img id="company_image" src="<%= comp.picture.profile.url %>" alt="">
        <div class="caption">
          <div id="text">
          <h3><%= link_to comp.title, company_path(comp) %></h3>
          <p><%= comp.tag_line %></p>
          <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
          </div>
        </div>
        </div>
      <!-- </div> -->
    </div>
  </div>
<% end %>
</div>

<div class="paginate"><%= paginate @companies %></div>
