<h1>Application Question Responses</h1>

<%# @company.applyings.each do |applying| %>
    <p><%#= applying.answer_field %></p>
<%# end %>

  <%#= link_to app.answer_field, company_path(app) %>

<% @applyings.each do |app| %>
<%# 100.times do |num| %>
  <% app.application_answers.each do |application_answer| %>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingThree">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= application_answer.id %>" aria-expanded="false" aria-controls="collapseThree">
              This is a tagline.
            </a>
          </h4>
        </div>
        <div id="<%= application_answer.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
          <div class="panel-body">
            <%= application_answer.answer %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<%# end %>
